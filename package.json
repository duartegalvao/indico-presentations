{
  "name": "marp-cli-example",
  "version": "0.0.1",
  "author": "Pedro Ferreira <pedro.ferreira@cern.ch>",
  "license": "CC BY-NC-SA",
  "private": true,
  "scripts": {
    "build": "rimraf dist && npm run -s og-image && npm run -s deck && npm run -s build-pptx && npm run -s build-pdf",
    "deck": "marp --no-stdin PITCHME.md -o dist/index.html --html && cpx \"assets/**/*\" dist/assets",
    "now-build": "npm run -s deck",
    "build-pptx": "marp --no-stdin PITCHME.md -o dist/presentation.pptx --html",
    "build-pdf": "marp --no-stdin PITCHME.md -o dist/presentation.pdf --html",
    "og-image": "marp PITCHME.md -o dist/og-image.jpg --html",
    "start": "marp -s . --html"
  },
  "devDependencies": {
    "@marp-team/marp-cli": "^3.4",
    "cpx": "^1.5",
    "rimraf": "^5"
  },
  "dependencies": {
    "eslint": "^8"
  }
}
